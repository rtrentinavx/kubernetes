# AKS cluster kubeconfig (cluster to register)
kubeconfig_path    = "~/.kube/config"
kubeconfig_context = ""  # Leave empty to use current-context, or specify context name

# Name for cluster in ArgoCD
cluster_name_in_argocd = "aks-eastus"

# Auto-detect ArgoCD credentials from Kubernetes
auto_detect_argocd = true

# ArgoCD cluster kubeconfig (where ArgoCD is installed, e.g., GKE)
argocd_kubeconfig_path    = "~/.kube/config"
argocd_kubeconfig_context = ""  # Specify GKE context if different from current

# ArgoCD namespace
argocd_namespace = "argocd"

# Manual configuration (only used if auto_detect_argocd = false)
# argocd_server   = "argocd.example.com:443"
# argocd_username = "admin"
# argocd_password = "your-password-here"
# argocd_insecure = false

# ArgoCD project
argocd_project = "default"
